top_dir=$(cd $(dirname $(dirname $0)) && pwd)

dirs="
    $top_dir/common
    $top_dir/core
    $top_dir/ias_client
    $top_dir/ias_proxy
    $top_dir/sgx/rust_sgxffi
    $top_dir/families/sawtooth_validator_registry/validator_registry
"

exitcode=0

rustfmt --version

for dir in $dirs; do
    cd $dir
    directory_exists_exit=$?
    echo "$dir"

    # abort the operation as failure, if the expected directory does not exist
    # 0 = Directory exists
    # 1 = Directory does not exists
    if [[ $directory_exists_exit != 0 ]]; then
        exitcode=1
    fi

    echo "-- rustfmt"

    diff=$(cargo fmt -- --check)
    rustfmt_exit=$?

    # rustfmt --check returns the following exit codes:
    #
    # 0 = No errors
    # 1 = Formatted code differs from existing code (check only)

    if [[ $rustfmt_exit != 0 ]]; then
        exitcode=1
        if [[ $rustfmt_exit == 1 ]]; then
          echo "Incorrect formatting: $dir (error code: $rustfmt_exit)"
          echo -e $diff
        else
            echo "rustfmt encountered an operational error"
        fi
    fi

done

exit $exitcode
